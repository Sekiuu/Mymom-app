generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
  // schemas = ["public", "dev"]
}

model users {
  id         String   @id @default(uuid())
  username   String
  email      String   @unique
  password   String
  create_at DateTime @default(now())

  // @@schema("dev")
}

model posts {
  id        String   @id @default(uuid())
  user_id   String
  username  String
  content   String
  image     String?
  create_at DateTime @default(now())

  // @@schema("dev")
}